<h4>This is in _form.html.erb</h4>

<%= form_for @work do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title, :required => true %>
  </p>
  <p>
    <%= f.label :year %>
    <%= f.text_field :year, :required => true %>
  </p>
  <p>
    <%= f.label :medium %>
    <%= f.text_field :medium, :required => true %>
  </p>
  <p>
    <%= f.label :style %>
    <%= f.text_field :style, :required => true %>
  </p>
  <p>
    <%= f.label :image %>
    <%= f.url_field :image, :required => true %>
  </p>
  <p>
    <%= f.collection_select(:artist_id, Artist.all, :id, :name) %>
  </p>

  <!-- Have a dropdown of all artists -->

  <%= f.submit %>
<% end %>
