<h1><%= @artist.name %></h1>

<%= image_tag @artist.image %>

<ul>
  <li>Nationality: <%= @artist.nationality %></li>
  <li>Date of birth: <%= @artist.dob.strftime( "%A, %B %e, %Y" ) %></li>
  <li>Period: <%= @artist.period %></li>
</ul>

<div class="controls">
  <%= link_to "Edit #{@artist.name}", "/artists/#{@artist.id}/edit" %>
  <%= link_to "Delete #{@artist.name}", "/artists/#{@artist.id}", :method => :delete, :data => { :confirm => "Are you sure?" } %>
</div>

<hr>

<h3>Artworks</h3>

<ul>
  <% @artist.works.each do |w| %>
    <li><%= link_to( w.title, "/works/#{w.id}" ) %></li>
  <% end %>
</ul>
