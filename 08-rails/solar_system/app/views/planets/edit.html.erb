<h2>Edit an existing planet</h2>

<form action="/planets/<%= @planet.id %>" method="POST">
  <!-- p*5>label+input -->
  <p>
    <label>Name:</label>
    <input type="text" name="planet[name]" value="<%= @planet.name %>">
  </p>
  <p>
    <label>Image:</label>
    <input type="url" name="planet[image]" value="<%= @planet.image %>">
  </p>
  <p>
    <label>Orbit:</label>
    <input type="number" name="planet[orbit]" value="<%= @planet.orbit %>">
  </p>
  <p>
    <label>Diameter:</label>
    <input type="number" name="planet[diameter]" value="<%= @planet.diameter %>">
  </p>
  <p>
    <label>Moons</label>
    <input type="number" name="planet[moons]" value="<%= @planet.moons %>">
  </p>
  <input type="submit" value="Edit this planet">
</form>
