<h2>This should show the form to create a new habitat</h2>

<form action="/habitats/<%= @habitat.id %>" method="POST">
  <p>
    <label>Landscape: </label>
    <input type="text" name="landscape" value="<%= @habitat.landscape %>">
  </p>
  <p>
    <label>Climate: </label>
    <input type="text" name="climate" value="<%= @habitat.climate %>">
  </p>
  <input type="submit" value="Edit habitat">
</form>
